<!-- Email Signup Button & Hidden Form -->
<div class="email-signup-toggle">
  <button
    class="restock-toggle-btn"
    data-target="form-{{ section.id }}"
  >Restock Alert</button>

  <div
    id="form-{{ section.id }}"
    style="display:none;"
  >
    {% form 'customer' %}
      <input type="hidden" name="contact[tags]" value="restock-{{ product.title | handleize }}">
      <label>Email address</label>
      <input
        type="email"
        name="contact[email]"
        placeholder="Enter your email"
        required
      >
      <button type="submit">Notify Me</button>
    {% endform %}
  </div>
<style>
.restock-toggle-btn {
  background: var(--button-background-color);
  color: var(--color-primary);
  padding: 3px 5px; 
}


</style>




</div>
