{% comment %}
  Mega Menu List V2
  - Fixed layout, editable content (product list + promo images)
  - Designed for Horizon or OS2.0 themes
{% endcomment %}

<div class="mega-menu-list-v2">
  <div class="mega-menu-list-v2__grid">
    
    <!-- Left Column: Shop by Hat -->
    <div class="mega-menu-list-v2__hats">
      <h3 class="mega-menu-list-v2__heading">{{ section.settings.product_menu_title }}</h3>
      <ul class="mega-menu-list-v2__products">
        {% for product in section.settings.hat_products %}
          <li class="mega-menu-list-v2__product">
            <a href="{{ product.url }}" class="menu-product-link">
              <img src="{{ product.featured_image | image_url: width: 80 }}" alt="{{ product.title }}">
              <span class="menu-product-title">{{ product.title }}</span>
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>

    <!-- Right Column: Promo Banners -->
    <div class="mega-menu-list-v2__promos">
      <div class="mega-menu-list-v2__promo">
        {% if section.settings.left_image %}
          <a href="{{ section.settings.left_link }}" class="menu-promo-item">
            <img src="{{ section.settings.left_image | image_url: width: 600 }}" alt="Promo Left">
            <span class="mega-menu-list-v2__promo-text">{{ section.settings.left_text }}</span>
          </a>
        {% endif %}
      </div>

      <div class="mega-menu-list-v2__promo">
        {% if section.settings.right_image %}
          <a href="{{ section.settings.right_link }}" class="menu-promo-item">
            <img src="{{ section.settings.right_image | image_url: width: 600 }}" alt="Promo Right">
            <span class="mega-menu-list-v2__promo-text">{{ section.settings.right_text }}</span>
          </a>
        {% endif %}
      </div>
    </div>

  </div>
</div>

{% schema %}
{
  "name": "Mega Menu List V2",
  "settings": [
    {
      "type": "product_list",
      "id": "hat_products",
      "label": "Select hats to display",
      "limit": 12
    },
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Left Promo Image"
    },
    {
      "type": "text",
      "id": "left_text",
      "label": "Left Promo Text",
      "default": "LATEST DROPS"
    },
    {
      "type": "url",
      "id": "left_link",
      "label": "Left Promo Link"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Promo Image"
    },
    {
      "type": "text",
      "id": "right_text",
      "label": "Right Promo Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "right_link",
      "label": "Right Promo Link"
    },
    {
    "type": "text", 
    "id": "product_menu_title",
    "label": "Product Menu Title",
    "default": "Shop By Hat"
    },
  ],
  "presets": [
    {
      "name": "Mega Menu List V2",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% style %}
.mega-menu-list-v2 {
  padding-top: 20px;
  padding-left: 40px; 
  padding-right: 40px; 
}

.mega-menu-list-v2__grid {
  display: flex;
  gap: 40px;
  justify-content: space-between;
}

.mega-menu-list-v2__hats {
  flex: 1;
}

.mega-menu-list-v2__products {
  list-style: none;
  padding: 0;
  margin: 0;
display: grid;
grid-template-columns: 1fr 1fr;
}


span.menu-product-title {
  place-self: center
}

a.menu-product-link {
  width: 100%;
display: flex;
flex-direction: row;

}

.mega-menu-list-v2__product {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10px;
box-sizing: border-box; 
border-left: 2px solid rgba(0, 0, 0, 0);
width: 20rem;
padding-right: .5rem; 
padding-left: .5rem; 
}


.mega-menu-list-v2__product:hover {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10px;
width: 20rem;
background: #F5F5F5; 
border-left: 2px solid #1E00A5;
box-sizing: border-box; 
}

.mega-menu-list-v2__product img {
  width: 6rem;
  height: auto;
  margin-right: 12px;
}

.mega-menu-list-v2__promos {
  display: flex;
  flex-direction: row;
  gap: 20px;
  flex: 1;
}

a.menu-promo-item {
  position: relative; 
  display: flex;
  justify-content: baseline; 
  align-items: baseline; 
  place-content: baseline; 
  height: 100%; 
  
}

.mega-menu-list-v2__promo img {
  width: 20rem;
  height: 100%; 
  display: block;
  object-fit: cover; 
}

.mega-menu-list-v2__promo-text {
  position: relative;
  z-index: 4;
  bottom: 20px;
  place-self: center; 
  color: white;
  font-weight: bold;
  font-size: 1.5rem;
}
{% endstyle %}
